<Page
    x:Name="pageRoot"
    x:Class="WoWHandbook.Views.Character.HubPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WoWHandbook"
    xmlns:data="using:WoWHandbook.Data"
    xmlns:common="using:WoWHandbook.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="loaded">

    <Page.Resources>
        <!-- Grid-appropriate 310 by 260 pixel item template as seen in section 4 -->
        <DataTemplate x:Key="Standard310x260ItemTemplate">
            <Grid Height="250" Width="310" Margin="5,10,5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" Height="150">
                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill" AutomationProperties.Name="{Binding Title}"/>
                </Border>
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <TextBlock Text="{Binding Title}" Style="{StaticResource TitleTextBlockStyle}" TextWrapping="NoWrap"/>
                    <TextBlock Text="{Binding Description}" Style="{StaticResource BodyTextBlockStyle}" MaxHeight="60" />
                </StackPanel>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="DataTemplateEquippedItems"/>
        <DataTemplate x:Key="DataTemplate1">
            <Grid
                Margin="0" >
            	<Grid.RowDefinitions>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            		<RowDefinition/>
            	</Grid.RowDefinitions>
            	<Grid.ColumnDefinitions>
            		<ColumnDefinition/>
            		<ColumnDefinition/>
            		<ColumnDefinition/>
            		<ColumnDefinition/>
            	</Grid.ColumnDefinitions>
            	<Image x:Name="imageOffand" Grid.Column="2" Margin="0" Grid.Row="8" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-secondaryhand.jpg"/>
            	<Image x:Name="imageMainHand" Margin="0" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-mainhand.jpg" Grid.Column="1" Grid.Row="8"/>
            	<Image x:Name="imageTrinket2" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-trinket.jpg" Grid.Row="7" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageTrinket1" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-trinket.jpg" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageRing2" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-finger.jpg" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageRing1" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-finger.jpg" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageFeet" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-feet.jpg" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageLegs" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-legs.jpg" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageWaist" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-waist.jpg" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageHands" Margin="0,3,10,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-hands.jpg" Grid.Column="3" HorizontalAlignment="Right"/>
            	<Image x:Name="imageHead" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-head.jpg" HorizontalAlignment="Left"/>
            	<Image x:Name="imageNeck" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-neck.jpg" HorizontalAlignment="Left" Grid.Row="1"/>
            	<Image x:Name="imageShoulder" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-shoulder.jpg" HorizontalAlignment="Left" Grid.Row="2"/>
            	<Image x:Name="imageBack" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-back.jpg" HorizontalAlignment="Left" Grid.Row="3"/>
            	<Image x:Name="imageChest" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-chest.jpg" HorizontalAlignment="Left" Grid.Row="4"/>
            	<Image x:Name="imageShirt" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-shirt.jpg" HorizontalAlignment="Left" Grid.Row="5"/>
            	<Image x:Name="imageTabard" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-tabard.jpg" HorizontalAlignment="Left" Grid.Row="6"/>
            	<Image x:Name="imageWrist" Margin="10,3,0,3" Source="ms-appx:///Assets/gear/emptySlots/empty-slot-wrists.jpg" HorizontalAlignment="Left" Grid.Row="7" ToolTipService.ToolTip=""/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <!--
    This grid acts as a root panel for the page.
  -->
    <Grid x:Name="characterPageGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Hub x:Name="characterPageHub" SectionHeaderClick="Hub_SectionHeaderClick">
            <Hub.Header>
                <!-- Back button and page title -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button  x:Name="backButton" Style="{StaticResource NavigationBackButtonNormalStyle}"
                        Margin="-1,-1,39,0" 
                        VerticalAlignment="Top"
                        Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
                    <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        VerticalAlignment="Top" IsHitTestVisible="false" TextWrapping="NoWrap" />
                </Grid>
            </Hub.Header>
            <HubSection x:Name="equippedItems" HorizontalAlignment="Stretch" ContentTemplate="{StaticResource DataTemplate1}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Width="702" Loaded="equippedItemsHubSectionLoaded">
                <HubSection.Background>
                    <ImageBrush ImageSource="ms-appx:///Assets/89411467-profilemain.jpg" Stretch="UniformToFill" />
                </HubSection.Background>
            </HubSection>
            <HubSection x:Name="characterStats" x:Uid="Section1Header" Header="Stats" HorizontalAlignment="Stretch">
                <DataTemplate>
                    <ScrollViewer Padding="0,0,15,0" VerticalScrollBarVisibility="Auto" ZoomMode="Disabled" VerticalScrollMode="Auto" HorizontalScrollMode="Disabled">
                    <Grid
                		Width="544" VerticalAlignment="Top">
                    	<Grid.ColumnDefinitions>
                    		<ColumnDefinition/>
                    		<ColumnDefinition/>
                    	</Grid.ColumnDefinitions>
                		<Grid.RowDefinitions>
                			<RowDefinition Height="Auto" />
                			<RowDefinition Height="Auto" />
                			<RowDefinition Height="Auto" />
                		</Grid.RowDefinitions>
                		<Grid x:Name="baseStats" HorizontalAlignment="Center" Height="204" VerticalAlignment="Top" Width="241" Background="#FFFF9700" Margin="0,0,0,30">
                			<StackPanel Margin="10,10,0,0" HorizontalAlignment="Left" Width="221" Height="185" VerticalAlignment="Top">
                				<TextBlock x:Name="Base_Stats" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap" Text="Base Stats" Foreground="Black" VerticalAlignment="Center" Height="26" FontWeight="Bold" FontSize="24"/>
                				<StackPanel VerticalAlignment="Top" Background="#FFFFD392" Height="179" HorizontalAlignment="Left" Width="231" Margin="0,0,-10,0"
                                 >
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Strength" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Strength" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="strengthValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="100"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<Grid.ColumnDefinitions>
                							<ColumnDefinition Width="209*"/>
                							<ColumnDefinition Width="12*"/>
                						</Grid.ColumnDefinitions>
                						<TextBlock x:Name="Agility" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Agility" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667" Margin="0,2"/>
                						<TextBlock x:Name="agilityValue" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="50000" VerticalAlignment="Top" Margin="0,1,0,0" Foreground="Black" HorizontalAlignment="Right" Padding="0,0,5,0" FontSize="18.667" Grid.ColumnSpan="2" Loaded="statLoaded"/>
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Stamina" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Stamina" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="staminaValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="55000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Intellect" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Intellect" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="intellectValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="9000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Spirit" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Spirit" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock x:Name="spiritValue" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="15500" VerticalAlignment="Top" Margin="0,1,0,0" Foreground="Black" HorizontalAlignment="Right" Padding="0,0,5,0" FontSize="18.667" Loaded="statLoaded"/>
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Mastery" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Mastery" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock x:Name="masteryValue" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="30.21%" VerticalAlignment="Top" Margin="0,1,0,0" Foreground="Black" HorizontalAlignment="Right" Padding="0,0,5,0" FontSize="18.667" Loaded="statLoaded"/>
                					</Grid>
                				</StackPanel>
                			</StackPanel>
                		</Grid>
                		<Grid x:Name="defenseStats" HorizontalAlignment="Center" Height="204" VerticalAlignment="Top" Width="241" Background="#FFFF9700" Margin="25,0,0,30" Grid.Column="1">
                			<StackPanel Margin="10,10,0,0" HorizontalAlignment="Left" Width="221" Height="185" VerticalAlignment="Top">
                				<TextBlock x:Name="Base_Stats1" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap" Text="Defense" Foreground="Black" VerticalAlignment="Center" Height="26" FontWeight="Bold" FontSize="24"/>
                				<StackPanel VerticalAlignment="Top" Background="#FFFFD392" Height="179" HorizontalAlignment="Left" Width="231" Margin="0,0,-10,0">
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Armor" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Armor" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="armorValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="100"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Dodge" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Dodge" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="dodgeValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="50000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Parry" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Parry" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="parryValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="55000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="Block" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Block" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="blockValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="9000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="PvPResil" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="PvP Resilience" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="pvpResilienceValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="15500"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<Grid.ColumnDefinitions>
                							<ColumnDefinition Width="31*"/>
                							<ColumnDefinition Width="190*"/>
                						</Grid.ColumnDefinitions>
                						<TextBlock x:Name="PvPPower" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="PvP Power" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667" Grid.ColumnSpan="2" Margin="0,2"/>
                						<TextBlock
                							x:Name="pvpPowerValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="30.21%"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Grid.Column="1"
                							Loaded="statLoaded" />
                					</Grid>
                				</StackPanel>
                			</StackPanel>
                		</Grid>
                		<Grid x:Name="spellStats" HorizontalAlignment="Center" Height="204" VerticalAlignment="Top" Width="241" Background="#FFFF9700" Margin="0,0,0,30" Grid.Row="1">
                			<StackPanel Margin="10,10,0,0" HorizontalAlignment="Left" Width="221" Height="185" VerticalAlignment="Top">
                				<TextBlock x:Name="Base_Stats2" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap" Text="Spell" Foreground="Black" VerticalAlignment="Center" Height="26" FontWeight="Bold" FontSize="24"/>
                				<StackPanel VerticalAlignment="Top" Background="#FFFFD392" Height="179" HorizontalAlignment="Left" Width="231" Margin="0,0,-10,0">
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="SpellPower" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Spell Power" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="spellPowerValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="100"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="SpellHaste" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Haste" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="spellHasteValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="50000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="SpellHit" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Hit" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="spellHitValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="+15.00%"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="ManaRegen" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Mana Regen" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="manaRegenValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="9000"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="CombatRegen" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Combat Regen" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="manaCombatRegenValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="15500"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="SpellCrit" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Crit" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="spellCritValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="30.21%"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                				</StackPanel>
                			</StackPanel>
                		</Grid>
                		<Grid x:Name="meleeStats" HorizontalAlignment="Center" Height="187" VerticalAlignment="Top" Width="244" Background="#FFFF9700" Margin="25,0,0,30" Grid.Row="1" Grid.Column="1">
                			<StackPanel Margin="10,10,0,0" HorizontalAlignment="Left" Width="221" Height="185" VerticalAlignment="Top">
                				<TextBlock x:Name="Base_Stats3" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="Wrap" Text="Melee" Foreground="Black" VerticalAlignment="Center" Height="26" FontWeight="Bold" FontSize="24"/>
                				<StackPanel VerticalAlignment="Top" Background="#FFFFD392" Height="135" HorizontalAlignment="Left" Width="221">
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="SpellPower1" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Attack Power" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock
                							x:Name="meleeAttackPowerValue"
                							Style="{StaticResource BaseTextBlockStyle}"
                							TextWrapping="Wrap"
                							Text="100"
                							VerticalAlignment="Top"
                							Margin="0,1,0,0"
                							Foreground="Black"
                							HorizontalAlignment="Right"
                							Padding="0,0,5,0"
                							FontSize="18.667"
                							Loaded="statLoaded" />
                					</Grid>
                					<Grid Height="26" Margin="0,0,10,0">
                						<TextBlock x:Name="SpellHaste1" Style="{StaticResource BaseTextBlockStyle}" TextWrapping="Wrap" Text="Haste" Foreground="Black" Padding="5,0,0,0" HorizontalAlignment="Left" Height="22" VerticalAlignment="Center" FontSize="18.667"/>
                						<TextBlock

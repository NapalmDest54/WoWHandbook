                                Height="50">

                            </Image>
                            <Image
                                x:Name="imageFinger1"
                                HorizontalAlignment="Right"
                                Grid.Column="3"
                                Grid.Row="4"
                                Loaded="itemSetLoaded"
                                Source="ms-appx:///Assets/spell_holy_blessingofagility.jpg"

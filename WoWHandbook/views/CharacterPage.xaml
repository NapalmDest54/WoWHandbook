            </HubSection>


            <HubSection
                x:Name="statsHubSection"
                Header="Stats">

                <DataTemplate>
                    <ScrollViewer
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Padding="0,0,25,0">
                        <Grid>
                            <Grid.RowDefinitions>

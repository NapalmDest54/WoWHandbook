                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="*" />
                                <ColumnDefinition
                                    Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                BorderThickness="3"
                                Background="#FF1d1d1d"
                                BorderBrush="Black"
                                Grid.Column="0"
                                Grid.Row="0"
                                Margin="5">
                                <StackPanel>
                                    <Border
                                        Background="Black">
                                        <TextBlock
                                            x:Name="statsTextBlock"
                                            TextWrapping="Wrap"
                                            Text="Base"
                                            FontSize="22"
                                            VerticalAlignment="Top"
                                            Foreground="White"
                                            Margin="0"
                                            Padding="0,0,0,0" />
                                    </Border>
                                    <TextBlock
                                        x:Name="baseStats"
                                        HorizontalAlignment="Left"
                                        Loaded="baseStatsLoaded"
                                        TextWrapping="Wrap"
                                        Text="Stat: 23422"
                                        FontSize="18"
                                        VerticalAlignment="Top" />
                                </StackPanel>
                            </Border>

                            <Border
                                BorderThickness="3"
                                Background="#ff1d1d1d"
                                BorderBrush="Black"
                                Grid.Column="1"
                                Grid.Row="0"
                                Margin="5">
                                <StackPanel>
                                    <Border
                                        Background="Black">
                                        <TextBlock
                                            x:Name="statsDefense"
                                            TextWrapping="Wrap"
                                            Text="Defense"
                                            FontSize="22"
                                            VerticalAlignment="Top"
                                            Foreground="White"
                                            Margin="0"
                                            Padding="0,0,0,0" />
                                    </Border>

                                    <TextBlock
                                        x:Name="defenseStats"
                                        HorizontalAlignment="Left"
                                        Loaded="baseStatsLoaded"
                                        TextWrapping="Wrap"
                                        Text="Stat: 23422"
                                        FontSize="18"
                                        VerticalAlignment="Top" />
                                </StackPanel>
                            </Border>

                            <Border
                                BorderThickness="3"
                                Background="#FF1D1D1D"
                                BorderBrush="Black"
                                Grid.Column="0"
                                Grid.Row="1"
                                Margin="5">
                                <StackPanel>
                                    <Border
                                        Background="Black">
                                        <TextBlock
                                            x:Name="statsSpell"
                                            TextWrapping="Wrap"
                                            Text="Spell"
                                            FontSize="22"
                                            VerticalAlignment="Top"
                                            Foreground="White"
                                            Margin="0"
                                            Padding="0,0,0,0" />
                                    </Border>

                                    <TextBlock
                                        x:Name="spellStats"
                                        HorizontalAlignment="Left"
                                        Loaded="baseStatsLoaded"
                                        TextWrapping="Wrap"
                                        Text="Stat: 23422"
                                        FontSize="18"
                                        VerticalAlignment="Top" />
                                </StackPanel>
                            </Border>

                            <Border
                                BorderThickness="3"
                                Background="#FF1D1D1D"
                                BorderBrush="Black"
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="5">
                                <StackPanel>
                                    <Border
                                        Background="Black">
                                        <TextBlock
                                            x:Name="statsMelee"
                                            TextWrapping="Wrap"
                                            Text="Melee"
                                            FontSize="22"
                                            VerticalAlignment="Top"
                                            Foreground="White"
                                            Margin="0"
                                            Padding="0,0,0,0" />
                                    </Border>

                                    <TextBlock
                                        x:Name="meleeStats"
                                        HorizontalAlignment="Left"
                                        Loaded="baseStatsLoaded"
                                        TextWrapping="Wrap"
                                        Text="Stat: 23422"
                                        FontSize="18"
                                        VerticalAlignment="Top" />

                                </StackPanel>
                            </Border>

                            <Border
                                BorderThickness="3"
                                Background="#ff1d1d1d"
                                BorderBrush="Black"
                                Grid.Column="0"
                                Grid.Row="2"
                                Margin="5">
                                <StackPanel>
                                    <Border
                                        Background="Black">
                                        <TextBlock
                                            x:Name="statsRanged"
                                            TextWrapping="Wrap"
                                            Text="Ranged"
                                            FontSize="22"
                                            VerticalAlignment="Top"
                                            Foreground="White"
                                            Margin="0"
                                            Padding="0,0,0,0" />
                                    </Border>
                                    <TextBlock
                                        x:Name="rangedStats"
                                        HorizontalAlignment="Left"
                                        Loaded="baseStatsLoaded"
                                        TextWrapping="Wrap"
                                        Text="Stat: 23422"
                                        FontSize="18"
                                        VerticalAlignment="Top" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>



                </DataTemplate>
            </HubSection>
            <HubSection
                Header="Glyphs and Talents"
                Width="740">
                <DataTemplate>
                    <ListView
                        x:Name="talentListView"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Loaded="TalentListViewLoaded"
                        IsHoldingEnabled="False"
                        IsRightTapEnabled="False"
                        IsDoubleTapEnabled="False"
                        IsTapEnabled="False">
                        <Button
                            x:Name="buttonTalent1"
                            HorizontalAlignment="Left"
                            Height="60"
                            VerticalAlignment="Top"
                            Width="213"
                            Loaded="TalentButtonLoaded"
                            IsRightTapEnabled="False"
                            IsDoubleTapEnabled="False"
                            IsHoldingEnabled="False"
                            IsTapEnabled="False">
                            <Grid>
                                <Image
                                    x:Name="talentImage1"
                                    Source="ms-appx:///Assets/talent_heart_of_the_wild.jpg"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Stretch="Uniform"
                                    Width="186"
                                    IsRightTapEnabled="False"
                                    IsHoldingEnabled="False"
                                    IsDoubleTapEnabled="False"
                                    IsTapEnabled="False"
                                    Loaded="TalentImageLoaded" />
                                <TextBlock
                                    x:Name="talentText1"
                                    Margin="49,0,-14,0"
                                    Loaded="TalentButtonTextLoaded"
                                    FontSize="14"></TextBlock>
                            </Grid>
                        </Button>
                        <Button
                            x:Name="buttonTalent2"
                            HorizontalAlignment="Left"
                            Height="60"
                            VerticalAlignment="Top"
                            Width="213"
